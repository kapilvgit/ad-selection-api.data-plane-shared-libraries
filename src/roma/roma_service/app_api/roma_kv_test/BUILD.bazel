load("@rules_buf//buf:defs.bzl", "buf_lint_test")
load("@rules_cc//cc:defs.bzl", "cc_proto_library", "cc_test")
load("@rules_proto//proto:defs.bzl", "proto_library")
load("//src/roma/tools/api_plugin:roma_app_api.bzl", "roma_app_api", "roma_client_cc_library", "roma_service_js_library")

proto_library(
    name = "kv_proto",
    srcs = ["kv.proto"],
    deps = [
        "//apis/privacysandbox/apis/roma/app_api/v1:options_proto",
    ],
)

buf_lint_test(
    name = "kv_proto_lint",
    size = "small",
    config = "//src:buf.yaml",
    targets = [":kv_proto"],
)

cc_proto_library(
    name = "kv_cc_proto",
    deps = [":kv_proto"],
)

kv_api = roma_app_api(
    cc_protos = [":kv_cc_proto"],
    proto_basename = "kv",
    protos = [":kv_proto"],
)

roma_service_js_library(
    name = "kv_js_library",
    roma_app_api = kv_api,
)

roma_client_cc_library(
    name = "kv_roma_api",
    roma_app_api = kv_api,
    roma_service_js_library = ":kv_js_library",
    tags = [
        "noasan",
    ],
    visibility = ["//visibility:public"],
)

cc_test(
    name = "kv_cc_test",
    size = "small",
    srcs = [":kv_roma_api_test.cc"],
    tags = [
        "noasan",
    ],
    deps = [
        ":kv_roma_api",
        "@com_google_absl//absl/strings",
        "@com_google_absl//absl/synchronization",
        "@com_google_absl//absl/time",
        "@com_google_googletest//:gtest_main",
    ],
)
